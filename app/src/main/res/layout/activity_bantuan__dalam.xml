<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bantuan_Dalam">


    <RelativeLayout
        android:id="@+id/baratas"
        android:background="@color/light"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/silona"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_live_help" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Bantuan SILONA"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/innerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baratas"
        android:layout_marginTop="48dp"
        android:gravity="left"
        tools:layout_editor_absoluteX="-5dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/join1" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon"
            android:textColor="@color/light"
            android:text="Menu Gabung Anggota, berfungsi untuk mengundang pengguna anak dari nama pengguna yang terdapat pada aplikasi SILONA ANAK. " />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/innerContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/innerContainer"
        android:layout_marginTop="25dp"
        android:gravity="left"
        tools:layout_editor_absoluteX="-5dp">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/member1" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/icon2"
            android:textColor="@color/light"
            android:text="Menu Tergabung Anggota, pengguna dapat melihat informasi anak dan memonitoring lokasi anak. " />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/innerContainer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/innerContainer2"
        android:layout_marginTop="25dp"
        android:gravity="left"
        tools:layout_editor_absoluteX="-5dp">

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/riwayat1" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/icon3"
            android:textColor="@color/light"
            android:text="Menu Daftar Riwayat Lokasi, pengguna dapat melihat riwayat lokasi anak yang dilalui oleh anak. " />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/innerContainer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/innerContainer3"
        android:layout_marginTop="25dp"
        android:gravity="left"
        tools:layout_editor_absoluteX="-5dp">

        <TextView
            android:id="@+id/icon4"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Edit Profil"
            android:gravity="center"
            android:textColor="@color/light"
            android:background="@drawable/btn_daftar_background"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/icon4"
            android:textColor="@color/light"
            android:text="Menu Edit Profil, pengguna dapat mengubah data diri sesuai keinginan." />
    </RelativeLayout>



    <ImageButton
        android:id="@+id/bantuan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/innerContainer3"
        android:background="@drawable/background_teks"
        android:onClick="gotoHome"
        android:src="@drawable/ic_back" />

</RelativeLayout>